package Prova;

public class Circulo extends Forma implements Dimensinavel {

	private float raio;
	
	public Circulo(float raio, String Cor) {
		this.raio = raio;
		this.setCor(Cor);
	}

	/*public Float getRaio() {
		return raio;                                     // NÃO SE FAZ NECESSARIO JÁ QUE FOI INICADO PELO CONSTRUTOR
	}

	public void setRaio(Float raio) {
		this.raio = raio;
	}
*/
	public Object[] area() {
		
	}
	public void redimensional(float fator) {
		super.redimensional(fator);
	}

	public String getCor() {
		return super.getCor();
	}

	public void setCor(String cor) {
		super.setCor(cor);
	}

	public String toString() {
		return " Criculo "
				+" Cor: "
				+ getCor()
				+" Área: "
				+ String.format("%.2f", area())
				+" Redimensionado:  ";
				//+ String.format("%.2f", redimensiona(2));//
	}
	
	
	
}
